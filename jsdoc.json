{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["src/core/", "src/utils/"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs|tests|hiraganaTo|katakanaTo|romajiTo)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  },
  "opts": {
    "template": "node_modules/docdash/",
    "encoding": "utf8",
    "destination": "docs/",
    "recurse": true,
    "verbose": true
  },
  "docdash": {
    "static": true,
    "sort": false
  }
}
