{
  "name": "kanawana",
  "description": "JS library that transliterates between japanese kana and roman letters.",
  "author": "Duncan Bay <duncan.bay@gmail.com> (https://github.com/DJTB)",
  "version": "1.1.0",
  "homepage": "https://djtb.github.io/KanaWana/",
  "repository": {
    "type": "git",
    "url": "git@github.com/DJTB/KanaWana/"
  },
  "bugs": {
    "url": "https://github.com/DJTB/KanaWana/issues"
  },
  "jsnext:main": "src/index.js",
  "main": "lib/kanawana.js",
  "browser": "lib/kanawana.min.js",
  "license": "MIT",
  "keywords": [
    "japanese",
    "english",
    "hiragana",
    "katakana",
    "romaji",
    "conversion",
    "transliteration"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=dev webpack --config webpack.dev.js --color --progress --watch",
    "build": "npm run build:production",
    "build:production": "cross-env NODE_ENV=production webpack --config webpack.production.js --color -p --progress",
    "commit": "git-cz",
    "precommit": "npm run lint",
    "pretest": "npm run test:clean",
    "prebuild": "npm run lint && npm run test",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "lint": "npm run lint:eslint -- './src/*.js'",
    "lint:eslint": "eslint --ignore-path ./.gitignore --ignore-pattern 'lib' --color",
    "lint-staged": "lint-staged",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint-staged",
  "jest": {
    "verbose": false,
    "bail": false,
    "testRegex": "(\\.(test|spec))\\.js$",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 40,
        "statements": 25
      }
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ]
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "devDependencies": {
    "babel-core": "~6.21.0",
    "babel-eslint": "~7.1.1",
    "babel-jest": "~18.0.0",
    "babel-loader": "~6.2.10",
    "babel-polyfill": "~6.20.0",
    "babel-preset-es2015": "~6.18.0",
    "babel-preset-stage-2": "~6.18.0",
    "circular-dependency-plugin": "~2.0.0",
    "commitizen": "~2.9.2",
    "coveralls": "~2.11.15",
    "cross-env": "~3.1.3",
    "cz-conventional-changelog": "~1.2.0",
    "eslint": "~3.12.2",
    "eslint-config-airbnb": "~13.0.0",
    "eslint-config-airbnb-base": "~11.0.0",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~2.2.0",
    "eslint-plugin-react": "~6.8.0",
    "jest": "~18.1.0",
    "lint-staged": "~3.2.5",
    "microtime": "~2.1.2",
    "pre-commit": "~1.2.2",
    "rimraf": "~2.5.4",
    "webpack": "~1.14.0"
  },
  "dependencies": {}
}
