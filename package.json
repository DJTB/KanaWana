{
  "name": "kanawana",
  "description": "JS library that transliterates between japanese kana and roman letters.",
  "author": "Duncan Bay <duncan.bay@gmail.com> (https://github.com/DJTB)",
  "version": "1.1.1",
  "homepage": "https://djtb.github.io/KanaWana/",
  "repository": {
    "type": "git",
    "url": "git@github.com/DJTB/KanaWana/"
  },
  "bugs": {
    "url": "https://github.com/DJTB/KanaWana/issues"
  },
  "jsnext:main": "src/index.js",
  "main": "lib/kanawana.js",
  "browser": "lib/kanawana.min.js",
  "license": "MIT",
  "keywords": [
    "japanese",
    "english",
    "hiragana",
    "katakana",
    "romaji",
    "conversion",
    "transliteration"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=dev webpack --config webpack.dev.js --color --progress --watch",
    "build": "npm run build:dev && npm run build:production",
    "build:dev": "cross-env NODE_ENV=dev webpack --config webpack.dev.js --color --progress",
    "build:production": "cross-env NODE_ENV=production webpack --config webpack.production.js --color -p --progress",
    "commit": "git-cz",
    "generate-docs": "node_modules/.bin/jsdoc -c jsdoc.json",
    "precommit": "npm run lint && npm run generate-docs",
    "pretest": "npm run test:clean",
    "prebuild": "npm run lint && npm run test",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "lint": "npm run lint:eslint -- './src/*.js'",
    "lint:eslint": "eslint --ignore-path ./.gitignore --ignore-pattern 'lib' --ignore-pattern 'docs' --color",
    "lint-staged": "lint-staged",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint-staged",
  "jest": {
    "verbose": false,
    "bail": false,
    "testRegex": "(\\.(test|spec))\\.js$",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 40,
        "statements": 25
      }
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/core/*.js",
      "src/utils/*.js",
      "!**/node_modules/**"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "plugins": [
      "import"
      ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "class-methods-use-this": 0,
      "default-case": 0,
      "import/imports-first": 0,
      "import/prefer-default-export": 0,
      "import/named": 2,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "id-length": [
        1,
        {
          "min": 2,
          "properties": "never",
          "exceptions": [
            "$",
            "_",
            "s",
            "t",
            "o",
            "v",
            "i",
            "a",
            "b",
            "x",
            "y"
          ]
        }
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-console": 1,
      "no-restricted-syntax": 0,
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true
        }
      ],
      "no-cond-assign": [
        2,
        "except-parens"
      ],
      "no-unused-vars": [
        1,
        {
          "vars": "local",
          "args": "none"
        }
      ],
      "no-param-reassign": 1,
      "prefer-template": 2,
      "quote-props": [
        1,
        "consistent-as-needed"
      ],
      "quotes": [
        1,
        "single",
        "avoid-escape"
      ],
      "space-infix-ops": 0,
      "spaced-comment": [
        "error",
        "always",
        {
          "exceptions": [
            "-",
            "*"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./webpack.dev.js"
        }
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-core": "~6.21.0",
    "babel-eslint": "~7.1.1",
    "babel-jest": "~18.0.0",
    "babel-loader": "~6.2.10",
    "babel-polyfill": "~6.20.0",
    "babel-preset-es2015": "~6.18.0",
    "babel-preset-stage-2": "~6.18.0",
    "circular-dependency-plugin": "~2.0.0",
    "commitizen": "~2.9.2",
    "coveralls": "~2.11.15",
    "cross-env": "~3.1.3",
    "cz-conventional-changelog": "~1.2.0",
    "docdash": "^0.4.0",
    "eslint": "~3.12.2",
    "eslint-config-airbnb": "~13.0.0",
    "eslint-config-airbnb-base": "~11.0.0",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~2.2.0",
    "eslint-plugin-react": "~6.8.0",
    "jest": "~18.1.0",
    "jsdoc": "^3.4.3",
    "lint-staged": "~3.2.5",
    "microtime": "~2.1.2",
    "pre-commit": "~1.2.2",
    "rimraf": "~2.5.4",
    "webpack": "~1.14.0"
  },
  "dependencies": {}
}
