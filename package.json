{
  "name": "kanawana-build",
  "author": "Duncan Bay <duncan.bay@gmail.com> (https://github.com/DJTB)",
  "license": "MIT",
  "homepage": "https://kaniwani.github.io/KanaWana/",
  "repository": {
    "type": "git",
    "url": "git@github.com/Kaniwani/KanaWana/"
  },
  "bugs": {
    "url": "https://github.com/Kaniwani/KanaWana/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "docs": "npm run docs:clean && npm run docs:build && npm run docs:commit",
    "docs:clean": "rimraf ./gh-pages/docs",
    "docs:build": "node_modules/.bin/jsdoc -c jsdoc.json",
    "docs:commit": "git add gh-pages/docs && git commit -q --no-edit --amend --no-verify && echo '\n** Docs rebuilt and added to commit **'",
    "docs:view": "opn ./gh-pages/docs/index.html",
    "docs:watch": "onchange './src/**/*.js' -- npm run docs",
    "pretest": "npm run test:clean",
    "test": "jest",
    "test:clean": "rimraf ./coverage",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint --ignore-path ./.gitignore --ignore-pattern 'lib' --ignore-pattern 'gh-pages' --color",
    "lint:staged": "npm run lint",
    "lint:src": "npm run lint -- './src/**/*.js'",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "coverage:view": "opn ./coverage/lcov-report/index.html",
    "prepush": "npm-run-all --parallel lint-staged test",
    "prerelease": "npm-run-all --parallel release:clean docs",
    "release:clean": "rimraf ./lib",
    "release": "node scripts/release.js",
    "//": "used by husky in git hooks like prepush to run the lint-staged config below",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "lint:staged"
    ]
  },
  "jest": {
    "bail": false,
    "verbose": false,
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ]
  },
  "devDependencies": {
    "babel-cli": "~6.24.1",
    "babel-core": "~6.24.1",
    "babel-eslint": "~7.2.1",
    "babel-jest": "~19.0.0",
    "babel-plugin-external-helpers": "~6.22.0",
    "babel-preset-env": "~1.4.0",
    "change-case": "~3.0.1",
    "commitizen": "~2.9.6",
    "coveralls": "~2.13.0",
    "cross-env": "~4.0.0",
    "docdash": "^0.4.0",
    "eslint": "~3.19.0",
    "eslint-config-airbnb": "~14.1.0",
    "eslint-config-airbnb-base": "~11.1.3",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~4.0.0",
    "eslint-plugin-react": "~6.10.3",
    "husky": "~0.13.3",
    "jest": "~19.0.2",
    "jsdoc": "^3.4.3",
    "lint-staged": "~3.4.0",
    "lodash": "~4.17.4",
    "microtime": "~2.1.2",
    "npm-run-all": "~4.0.2",
    "onchange": "~3.2.1",
    "opn-cli": "~3.1.0",
    "readline-sync": "~1.4.7",
    "rimraf": "~2.6.1",
    "rollup": "~0.41.6",
    "rollup-plugin-babel": "~2.7.1",
    "rollup-plugin-commonjs": "~8.0.2",
    "rollup-plugin-node-resolve": "~3.0.0",
    "rollup-plugin-replace": "~1.1.1",
    "rollup-plugin-uglify": "~1.0.1"
  },
  "devEngines": {
    "node": "6.x",
    "npm": "3.x"
  }
}
